<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/colorOffWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="5"
                android:padding="10dp"
                android:id="@+id/rv_layout">
                <TextView
                    android:id="@+id/rv_invoiceNo"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/small_height"
                    android:layout_weight="1"
                    android:textStyle="bold"

                    android:text="doc"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/rv_amount"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/small_height"
                    android:layout_weight="1"
                    android:text="0.00"
                    android:textColor="@android:color/black" />
                <TextView
                    android:id="@+id/rv_date"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/small_height"
                    android:layout_weight="1.5"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/rv_img_sync"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/small_height"
                    android:layout_weight=".5"
                    android:src="@drawable/ic_sync_ok"


                    android:gravity="right" />

                <ImageView
                    android:id="@+id/rv_img_edit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/small_height"
                    android:layout_weight=".5"
                    android:src="@drawable/ic_edit_disabled"
                    android:gravity="right"

                    />

                <ImageView
                    android:id="@+id/rv_img_share"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/small_height"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:src="@drawable/ic_share_black_24dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/rv_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/rv_layout"
                android:textStyle="bold" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>




</LinearLayout>
