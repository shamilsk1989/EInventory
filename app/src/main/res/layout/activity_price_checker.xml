<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<include-->
        <!--android:id="@+id/toolbar"-->
        <!--layout="@layout/toolbar_layout">-->

    <!--</include>-->


    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:weightSum="3">

        <EditText
            android:id="@+id/txtBarcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/editext_border"
            android:nextFocusLeft="@id/txtBarcode"
            android:nextFocusUp="@id/txtBarcode"


            android:padding="8dp" />

        <ImageView
            android:id="@+id/imgBarcode"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".5"
            android:src="@drawable/ic_barcode" />

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".5"
            android:src="@drawable/ic_submitt_24dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_layout"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_line"
        android:textStyle="bold"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="18sp" />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/txtName"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Product Code"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtviewPrice1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Price - "
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/txtCode"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_line"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <EditText

                    android:id="@+id/txtPrice1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_line"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtviewPrice2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Price - "
                    android:textColor="@android:color/black"
                    android:visibility="gone"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtviewPrice3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Price - "
                    android:visibility="gone"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText

                    android:id="@+id/txtPrice2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_line"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="18sp" />

                <EditText

                    android:id="@+id/txtPrice3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_line"
                    android:inputType="text"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:padding="5dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="18sp" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtStock"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:background="@drawable/border_line"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>