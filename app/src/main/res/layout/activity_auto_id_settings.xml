<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.AutoIdSettingsActivity">
    <include
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/toolbar_layout">

    </include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/toolbar">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView2"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewCustomerName"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Inventory "
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                    <EditText
                        android:id="@+id/editTextInventory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext"
                        android:gravity="center|left"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/content_layout"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Goods Receive "
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                    <EditText
                        android:id="@+id/editTextGoods"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext"
                        android:gravity="center|left"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/content_layout1"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Sales "
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                    <EditText
                        android:id="@+id/editTextSales"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext"
                        android:gravity="center|left"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/content_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/content_layout2"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center|left"
                        android:text="Order "
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                    <EditText
                        android:id="@+id/editTextOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_edittext"
                        android:gravity="center|left"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                </LinearLayout>
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="250dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/cardView2"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:text="Save" />
    </RelativeLayout>
</RelativeLayout>