<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.DashBoardActivity">

    <include layout="@layout/toolbar_layout"></include>

    <LinearLayout
        android:id="@+id/layBase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/saleCard"
                android:layout_width="@dimen/card_width_mob"
                android:layout_height="@dimen/card_height_mob"
                android:layout_margin="@dimen/medium_margin"
                android:layout_gravity="right"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/image_size_mob"
                        android:layout_height="@dimen/image_size_mob"
                        android:background="@drawable/cerclebackgroundpurple"
                        android:padding="@dimen/medium_margin"
                        android:src="@drawable/ic_sale" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:text="@string/nav_sale"
                        android:textStyle="bold" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/receiptCard"
                android:layout_width="@dimen/card_width_mob"
                android:layout_height="@dimen/card_height_mob"
                android:layout_margin="@dimen/medium_margin"
                android:layout_gravity="right"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/image_size_mob"
                        android:layout_height="@dimen/image_size_mob"
                        android:background="@drawable/cerclebackgroundpink"
                        android:padding="@dimen/medium_margin"
                        android:src="@drawable/ic_attach_money_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:text="@string/nav_receipt"
                        android:textStyle="bold" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/inventoryCard"
                android:layout_width="@dimen/card_width_mob"
                android:layout_height="@dimen/card_height_mob"
                android:layout_margin="@dimen/medium_margin"
                android:layout_gravity="right"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/image_size_mob"
                        android:layout_height="@dimen/image_size_mob"
                        android:background="@drawable/cerclebackgroundgreen"
                        android:padding="@dimen/medium_margin"
                        android:src="@drawable/ic_inventory" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:text="@string/nav_inventory"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/reportCard"
                android:layout_width="@dimen/card_width_mob"
                android:layout_height="@dimen/card_height_mob"
                android:layout_margin="@dimen/medium_margin"
                android:layout_gravity="right"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/image_size_mob"
                        android:layout_height="@dimen/image_size_mob"
                        android:background="@drawable/cerclebackgroundgreen"
                        android:padding="@dimen/medium_padding"
                        android:src="@drawable/ic_inventory" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:text="@string/nav_report"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/orderCard"
                android:layout_width="@dimen/card_width_mob"
                android:layout_height="@dimen/card_height_mob"
                android:layout_margin="@dimen/medium_margin"
                android:layout_gravity="left"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/image_size_mob"
                        android:layout_height="@dimen/image_size_mob"
                        android:background="@drawable/cerclebackgroundpink"
                        android:padding="@dimen/medium_padding"
                        android:src="@drawable/ic_sale" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:text="@string/nav_order"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/goodsCard"
                android:layout_width="@dimen/card_width_mob"
                android:layout_height="@dimen/card_height_mob"
                android:layout_margin="@dimen/medium_margin"
                android:layout_gravity="left"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/image_size_mob"
                        android:layout_height="@dimen/image_size_mob"
                        android:background="@drawable/cerclebackgroundyello"
                        android:padding="@dimen/medium_margin"
                        android:src="@drawable/ic_receive" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/nav_receive"
                        android:textStyle="bold" />

                </LinearLayout>
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:id="@+id/checkCard"
                android:layout_width="@dimen/card_width_mob"
                android:layout_height="@dimen/card_height_mob"
                android:layout_margin="@dimen/medium_margin"
                android:layout_gravity="left"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/image_size_mob"
                        android:layout_height="@dimen/image_size_mob"
                        android:background="@drawable/cerclebackgroundpurple"
                        android:padding="@dimen/medium_padding"
                        android:src="@drawable/ic_search_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:text="@string/nav_check"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/statementCard"
                android:layout_width="@dimen/card_width_mob"
                android:layout_height="@dimen/card_height_mob"
                android:layout_margin="@dimen/medium_margin"
                android:layout_gravity="left"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/image_size_mob"
                        android:layout_height="@dimen/image_size_mob"
                        android:background="@drawable/cerclebackgroundgreen"
                        android:padding="@dimen/medium_padding"
                        android:src="@drawable/ic_inventory" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:text="@string/nav_statement"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>